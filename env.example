# Production Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=ankilms_db
POSTGRES_USER=ankilms_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Database URL (used by Django)
DATABASE_URL=postgres://ankilms_user:CHANGE_THIS_TO_SECURE_PASSWORD@db:5432/ankilms_db

# ===========================================
# Django Configuration
# ===========================================
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_RANDOM_50_CHAR_STRING

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=api.ankivn.com,ankivn.com,www.ankivn.com,localhost

# ===========================================
# Anki Sync Server Configuration
# ===========================================
ANKI_SYNC_DATA_PATH=/anki_data
ANKI_SYNC_CONTAINER_NAME=ankilms_anki
ANKI_SYNC_USERS_FILE=/app/sync_users.env

# ===========================================
# Appwrite Configuration (Optional - for deck storage)
# ===========================================
APPWRITE_ENDPOINT=https://sgp.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your-project-id
APPWRITE_API_KEY=your-api-key
APPWRITE_BUCKET_ID=your-bucket-id

# ===========================================
# CORS Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=https://lms.ankivn.com,https://www.ankivn.com,https://ankivn.com

